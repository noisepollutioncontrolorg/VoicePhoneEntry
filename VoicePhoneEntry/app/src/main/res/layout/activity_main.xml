<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice Phone Entry"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap LISTEN and speak digits. Each spoken digit fills next box."
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/phoneRow"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10">

            <EditText android:id="@+id/d1" style="@android:style/Widget.Material.EditText"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d2" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d3" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d4" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d5" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d6" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d7" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d8" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d9" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

            <EditText android:id="@+id/d10" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:gravity="center"
                android:textSize="20sp" android:inputType="number"
                android:maxLength="1" android:focusable="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/btnListen"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:text="LISTEN" android:textSize="18sp"/>

            <Button android:id="@+id/btnSave"
                android:layout_marginStart="8dp"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:text="SAVE" android:textSize="18sp"/>

            <Button android:id="@+id/btnExport"
                android:layout_marginStart="8dp"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="56dp" android:text="EXPORT CSV" android:textSize="16sp"/>
        </LinearLayout>

        <TextView android:id="@+id/status"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
